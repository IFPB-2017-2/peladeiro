<script type="application/ld+json">
  [
  <% @groups.each do |g| %>
    {
      "@context": "http://schema.org",
      "@id": "<%= group_url(g) %>",
      "@type": "SportsOrganization",
      "name": "<%= g.nome %>",
      "description": "<%= g.descricao %>",
      "sport": "<%= sport_url(g.sport) %>",
      "publishingPrinciples": "<%= g.estatuto%>",
      "foundingDate": "<%= g.created_at %>",
      "founder": {
        "@type": "Person",
        "@id": "<%= person_url(g.fundador) %>",
        "name": "<%= g.fundador.nome %>"
      }
    },

  <%end %>
  ]
</script>
<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Esporte</th>
      <th>Fundador</th>
      <th>Estatuto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.nome %></td>
        <td><%= group.descricao %></td>
        <td><%= group.sport.nome %></td>
        <td><%= group.fundador.nome %></td>
        <td><%= group.estatuto %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

